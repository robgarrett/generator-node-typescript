{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": [ "app/src/*"],
      "lib/*": [ "app/lib/*"]
    }
  },
  "include": [
    "app/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
